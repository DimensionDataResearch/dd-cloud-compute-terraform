dist: trusty
sudo: required
language: go
services:
  - docker

go:
    - "1.12.x"

env:
  - GOMAXPROCS=4 GO111MODULE=on

install:
  - go get golang.org/x/crypto/pkcs12
  - go get github.com/pkg/errors
  - go get github.com/hashicorp/terraform@v0.12.19
  - go mod tidy
  - go mod vendor


script:
  - make dist


matrix:
  fast_finish: true
  allow_failures:
    - go: tip

before_deploy:
  - export TRAVIS_TAG="v3.0.4"
  - git tag $TRAVIS_TAG

deploy:
  provider: releases
  file: _bin/terraform-provider-ddcloud.*.zip
  skip_cleanup: true
  draft: true
  overwrite: false
  on:
    repo: DimensionDataResearch/dd-cloud-compute-terraform
    tags: true
    branches:
      only:
        - /^development\/v.*$/
        - /^release\/v.*$/
        - /^v.*$/
        - /^terraform.*$/
        - /^test.*$/

  api_key:
    secure: 
